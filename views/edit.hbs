<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
    <input type="checkbox" name="isComplete" value="completed" {{#if todo.isComplete}} checked {{/if}}>
    <input type="text" placeholder="please input name" name="name" value="{{todo.name}}">
    <input type="text" placeholder="please input content" name="content" value="{{todo.content}}">
    <button type="submit">Save</button>
    <a href="/todos">back</a>